<% layout("/layouts/boilerplate") %>
<body style="background-color: #f8fafc; font-family: 'Segoe UI', sans-serif;">

<div class="container mt-4">

    <!-- Listing Title -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary"><%= listing.title %></h2>
    </div>

    <!-- Listing Details -->
    <div class="card mx-auto shadow-sm rounded-4 mb-4" style="max-width: 800px;">
        <img src="<%= listing.image.url %>" class="card-img-top rounded-top-4" style="height: 400px; object-fit: cover;">
        <div class="card-body px-4 py-3">
            <p class="mb-1 text-muted">Owner: <strong><%= listing.owner.username %></strong></p>
            <p class="mb-2"><%= listing.description %></p>
            <p class="mb-1"><strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN") %></p>
            <p class="mb-1"><strong>Location:</strong> <%= listing.location %></p>
            <p class="mb-1"><strong>Country:</strong> <%= listing.country %></p>
        </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
    <div class="d-flex justify-content-center gap-3 mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4">✏️ Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-outline-danger px-4">🗑️ Delete</button>
        </form>
    </div>
    <% } %>

    <!-- Review Summary -->
    <% if (listing.reviewSummary) { %>
    <div class="alert alert-primary mx-auto shadow-sm" style="max-width: 800px;">
        <h5 class="fw-semibold mb-2">🌟 What Guests Are Saying (AI Summary)</h5>
        <p class="mb-0"><%= listing.reviewSummary %></p>
    </div>
    <% } else { %>
    <div class="text-center text-muted fst-italic mb-4" style="max-width: 800px; margin: 0 auto;">
        <p>No summarized review available yet.</p>
    </div>
    <% } %>

    <!-- Leave a Review Form -->
    <% if(currUser){ %>
    <div class="card shadow-sm mx-auto mb-5 p-4 rounded-4" style="max-width: 800px;">
        <h4 class="mb-3">📝 Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <% for(let i = 1; i <= 5; i++) { %>
                        <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>"/>
                        <label for="rate<%= i %>" title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i-1] %>"><%= i %> star<%= i > 1 ? 's' : '' %></label>
                    <% } %>
                </fieldset>
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" rows="4" required></textarea>
                <div class="invalid-feedback">Please enter some feedback.</div>
            </div>

            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
    <% } %>

    <!-- All Reviews -->
    <div class="mb-5 mx-auto" style="max-width: 900px;">
        <h4 class="mb-3">💬 All Reviews</h4>
        <div class="row row-cols-1 row-cols-md-2 g-3">
            <% for(let review of listing.reviews){ %>
            <div class="col">
                <div class="card shadow-sm h-100 rounded-4">
                    <div class="card-body">
                        <h5 class="card-title mb-1 text-dark"><%= review.author.username %></h5>
                        <p class="starability-result card-text mb-2" data-rating="<%= review.rating %>"></p>
                        <p class="card-text mb-2"><%= review.comment %></p>

                        <% if(currUser){ %>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

</div>
</body>
