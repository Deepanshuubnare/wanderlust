<style>
  .btn-search {
    background-color: #fe422d;
    color: white;
    display: flex;
    border-radius: 15px;
    padding: 0.5rem 1rem;
    align-items: center;
  }

  .btn-search:hover {
    background-color: #fe422d;
    color: white;
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 15px;
    padding-left: 1rem;
    min-width: 200px;
  }

  #aa:hover {
    background-color: lightblue;
    border-radius: 10px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center justify-content-between">

    <!-- Left: Icon + Explore -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand me-2" href="/listings"><i class="fa-solid fa-compass"></i></a>
      <a class="nav-link fw-bold" href="/listings">Explore</a>
    </div>

    <!-- Center: Search bar -->
    <form class="d-flex mx-auto" role="search" action="/listings/filter/search" method="GET">
      <input class="form-control me-2 search-inp" type="search" name="searchTerm" placeholder="Search Destinations" required>
      <button class="btn btn-search" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i> Search
      </button>
    </form>

    <!-- Right: Toggle + user menu -->
    <div class="d-flex align-items-center">
      <!-- Toggler -->
      <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible content -->
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ms-auto">
          <a class="nav-link" id="aa" href="/listings/new">Airbnb your home</a>
          <% if (!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
          <% } else { %>
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</nav>
